<?xml version = "1.0" encoding = "utf-8"?>
<elements>
    <info>
        <name>Homebrew Spell Effects</name>
        <update version = "0.0.1">
            <file name = "homebrew-spell-effects.xml" url = "https://raw.githubusercontent.com/StrangeMeta/homebrew/main/other/homebrew-spell-effects.xml"/>
        </update>
    </info>
	
	<element name="Mage Armour" type="Armor" source="Homebrew" id="ID_HOMEBREW_MAGE_ARMOUR">
		<supports>ID_INTERNAL_ARMOR_GROUP_LIGHT</supports>
		<description>
			<p>An equippable version of the Mage Armour spell.</p>
		</description>
		<setters>
			<set name="category">Armor</set>
			<set name="slot">body</set>
			<set name="armor">Light</set>
			<set name="armorClass">13 + Dex modifier</set>
		</setters>
		<rules>
			<stat name="ac:armored:armor" value="13" />
		</rules>
	</element>
	<element name="Shadow Blade" type="Magic Item" source="Homebrew" id="ID_HOMEBREW_SHADOW_BLADE">
		<supports>ID_INTERNAL_WEAPON_CATEGORY_SIMPLE_MELEE</supports>
		<description>
			<p>An equippable version of the blade conjured by the Shadow Blade spell.</p>
		</description>
		<setters>
			<set name="category">Magic Weapons</set>
			<set name="cost" currency="gp">0</set>
			<set name="type" addition="dagger">Weapon</set>
			<set name="weapon">Dagger</set>
			<set name="damage" type="psychic">2d8</set>
		</setters>
	</element>
</elements>